<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="16dp">
    <TextView
        android:id="@+id/event_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="title"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="parent" />
    <TextView
        android:id="@+id/event_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="this event is blablabla"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="parent" />
    <TextView
        android:id="@+id/event_item_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Event Date: 03/22/2022"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="parent" />
    <TextView
        android:id="@+id/event_item_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Due Time: 03/23/2022 13:00:00"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="parent" />

    <TextView
        android:id="@+id/event_item_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Event Owner: lyt310"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="parent" />
    <TextView
        android:id="@+id/event_item_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Duration: 100"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="parent" />
    <TextView
        android:id="@+id/event_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Location: 3115 Orchard Ave, Los Angeles, CA"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="parent" />
    <Button
        android:id="@+id/signup_event_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Signup"
        android:layout_gravity="end"/>
</LinearLayout>